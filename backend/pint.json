{
    "preset": "laravel",
    "rules": {
        "new_with_parentheses": true,
        "not_operator_with_successor_space": false,
        "blank_line_before_statement": false,
        "phpdoc_separation": false,
        "phpdoc_align": false,
        "concat_space": {
            "spacing": "one"
        },
        "single_line_empty_body": false
    },
    "exclude": [
        "app/Models/Base",
        "_ide_helper.php",
        "_ide_helper_models.php",
        "config"
    ]
}
